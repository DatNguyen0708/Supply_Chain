  <script src="/js/web3.js"></script>
  <script src="js/abi.js"></script>



  <title>SUPPLY CHAIN </title>

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/css/heroic-features.css" rel="stylesheet">

</head>

<body>


  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">Supply chain</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home
              <span class="sr-only">(current)</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/accounts">Accounts</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">About</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <input type="hidden" value="<%= add %>" id="add">
  <input type="hidden" value="<%= account %>" id="account">
  <div class="container" style="margin-top: 50px;">
    <h1>Merge Product</h1>
    <p>Merge this product with....</p>



    <div class="form-group row">
      <label for="chooseproduct " class="col-2 col-form-label ">Choose Product</label>
      <div class="col-10 ">

        <select class="form-control " id="comboboxProduct" multiple></select>
      </div>
    </div>
    <div class="form-group row">
      <label for="newproduct" class="col-2 col-form-label">New Product</label>
      <div class="col-10">
        <input type="text" name="newproduct" class="form-control" id="newproduct" placeholder="New Product...">
      </div>
    </div>
    <div class="form-group row">
      <label for="ratio" class="col-2 col-form-label">Ratio To Product</label>
      <div class="col-10">
        <input type="text" name="ratio" class="form-control" id="ratio" placeholder="Ratio to product">
      </div>
    </div>
    <div class="form-group row">
      <label for="amount" class="col-2 col-form-label">New Product Amount</label>
      <div class="col-10">
        <input type="number" name="amount" class="form-control" id="amount" placeholder="New product amount">
      </div>
    </div>
    <div class="form-group row">
      <label for="unit" class="col-2 col-form-label">New Product Unit</label>
      <div class="col-10">
        <input type="text" name="unit" class="form-control" id="unit" placeholder="New product unit">
      </div>
    </div>
    <div class="form-group row">
      <label for="executefrom " class="col-2 col-form-label ">Execute From</label>
      <div class="col-10 ">
        <input type="text" name="executefrom" class="form-control" id="x" value="<%= account %>" disabled>
      </div>
    </div>
    <div class="form-group row" style="margin-bottom: 20px">
      <label for="password" class="col-2 col-form-label">Password</label>
      <div class="col-10">
        <input type="password" name="password" class="form-control" id="password" placeholder="Password">
      </div>
    </div>
    <div class="form-group row" align="center" style="margin-left : 40% !important">
      <button type="submit " class="btn btn-primary " onclick="submit();">Submit</button>
    </div>

  </div>
  <!-- /.container -->


  <!-- Footer -->
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Website 2017</p>
    </div>
    <!-- /.container -->
  </footer>

  <!-- Bootstrap core JavaScript -->
  <!-- <script src="js/bootstrap.bundle.min.js"></script> -->
  <script type="text/javascript">
    if (typeof web3 !== 'undefined') {
      web3 = new Web3(web3.currentProvider);
    } else {
      web3 = new Web3(new Web3.providers.HttpProvider('http://localhost:8545'));
    }
    
    var account = document.getElementById('account').value;
    var addfirstproduct = document.getElementById('add').value;
    var countproduct = web3.eth.contract(abi).at(add).getCountProductOfOwner.call(account).toNumber();

    var data = [];

    for (i = 0; i < countproduct; i++) {
      var s = web3.eth.contract(abi).at(add).getProductOfOwnerByAddress.call(account, i);
      
      data.push(s);

    }

    for (n = 0; n < data.length; n++) {
      if (data[n] != addfirstproduct ){
      $("#comboboxProduct").append(`
              <option>${data[n]}</option>
              `)};
    }
    var executefrom = document.getElementById('x').value.toString();
    function submit() {

      var comboboxProduct = $("#comboboxProduct").val();
      var newproduct = web3.toHex(document.getElementById('newproduct').value);
      var a = document.getElementById('ratio').value;
      ratio = a.split(",");
      var amount = document.getElementById('amount').value;
      var unit = web3.toHex(document.getElementById('unit').value);
      var executefrom = document.getElementById('x').value.toString();
      var executefrom = executefrom.replace(/"/g, "'");
      var password = document.getElementById('password').value;
      if(ratio.length-1 != comboboxProduct.length){
        alert("WRONG RATIO...............")
      };
      for(i=0;i<ratio.length;i++){
    
        if(isNaN(ratio[i])){
          alert("WRONG RATIO, IT IS NOT NUMBER ...............")
          return;
          
        }
      }
  
      web3.personal.unlockAccount(executefrom, password);
      web3.eth.contract(abi0).at(addfirstproduct).merge.sendTransaction(comboboxProduct, newproduct, ratio, amount, unit, {
        from: executefrom,
        gas : "0x0" +(4700000).toString(16)
      });
   

    }

  </script>
</body>

</html>